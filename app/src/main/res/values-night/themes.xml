<resources>

    <style name="Theme.KonaBess" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dynamic color support -->
        <item name="android:forceDarkAllowed">true</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorOnPrimary">@android:color/system_accent3_700</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_200</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@android:color/system_accent2_500</item>
        <item name="colorOnSecondary">@android:color/system_accent2_100</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_300</item>
        <item name="colorOnSecondaryContainer">@android:color/system_accent2_800</item>

        <!-- Background and Surface Colors -->
        <item name="android:windowBackground">@android:color/system_accent1_100
        </item> <!-- Matches Primary Container -->
        <item name="colorSurface">@android:color/system_accent1_200
        </item>          <!-- Matches Primary Container -->
        <item name="colorOnSurface">@android:color/system_accent1_500
        </item>         <!-- Matches On Primary Container -->
        <item name="colorSurfaceVariant">@android:color/system_accent2_300
        </item>   <!-- Matches Secondary Container -->
        <item name="colorOnSurfaceVariant">@android:color/system_accent2_600
        </item> <!-- Matches On Secondary Container -->

        <!-- Dialog Colors -->
        <item name="dialogTheme">@android:color/system_neutral1_100</item>

        <!-- Toolbar Colors -->
        <item name="colorPrimarySurface">@android:color/system_accent1_500</item>
        <item name="colorOnPrimarySurface">@android:color/system_accent3_700</item>

        <!-- Button Colors -->
        <item name="buttonStyle">@style/Widget.Material3.Button</item>
        <item name="buttonBarButtonStyle">@android:color/system_accent1_500</item>
        <item name="colorButtonNormal">@android:color/system_accent3_100</item>
    </style>
</resources>
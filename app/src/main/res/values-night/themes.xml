<resources>

    <style name="Theme.KonaBess" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Dynamic color support -->
        <item name="android:forceDarkAllowed">true</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorOnPrimary">@android:color/system_accent3_700</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_200</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@android:color/system_accent2_500</item>
        <item name="colorOnSecondary">@android:color/system_accent2_100</item>

        <!-- Background and Surface Colors -->
        <item name="android:windowBackground">@android:color/system_accent1_100</item>
        <item name="colorSurface">@android:color/system_neutral1_100</item>
        <item name="colorSurfaceVariant">@android:color/system_neutral1_200</item>
        <item name="colorOnSurface">@android:color/system_neutral1_900</item>
    </style>
</resources>